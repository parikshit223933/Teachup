<link rel="stylesheet" href="/css/contact-us.css" />

<div class="container-fluid default-top-padding rounded">
	<p class="display-4 text-center" style="color: #8c00ff">Contact Us</p>

	<div class="row px-4 pt-4">
		<div
			class="col-md-6 d-flex flex-row justify-content-center align-items-center"
		>
			<img
				src="/images/svg/undraw_contact_us_15o2.svg"
				alt="contact-us"
				width="100%"
			/>
		</div>
		<div
			class="col-md-6 d-flex flex-row justify-content-center align-items-center"
		>
			<form class="rounded py-4 contact-form w-100">
				<div class="form-group">
					<label for="emailaddress"><b>Email address</b></label>
					<input
						type="email"
						class="form-control"
						id="emailaddress"
						placeholder="abc@xyz.com"
					/>
				</div>
				<div class="form-group">
					<label for="querytype"><b>Query type</b></label>
					<select class="form-control" id="querytype">
						<option>Complaint</option>
						<option>Bugs</option>
						<option>Help</option>
						<option>Feedback</option>
						<option selected>Other</option>
					</select>
				</div>
				<div class="form-group">
					<label for="messagetextarea"><b>Message</b></label>
					<textarea
						class="form-control"
						placeholder="Type your message here"
						id="messagetextarea"
						rows="3"
					></textarea>
				</div>
				<button type="submit" class="btn btn-primary mb-2">
					Send Message
				</button>
			</form>
		</div>
	</div>
</div>
